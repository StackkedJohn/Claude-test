# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/icepaca

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for admin alerts and order confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@icepaca.com
EMAIL_FROM="ICEPACA <noreply@icepaca.com>"

# URLs
ADMIN_URL=http://localhost:3000/admin
FRONTEND_URL=http://localhost:3000
PAYMENT_SUCCESS_URL=http://localhost:3000/checkout/success
PAYMENT_CANCEL_URL=http://localhost:3000/checkout/cancel

# Security
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=7d
ADMIN_TOKEN=admin-token-123
BCRYPT_ROUNDS=12

# Social Authentication (OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Processing
DEFAULT_CURRENCY=usd

# Tax Calculation (simple static rates - use tax service in production)
TAX_RATE_CA=0.08
TAX_RATE_NY=0.08
TAX_RATE_TX=0.0625
TAX_RATE_FL=0.06
TAX_RATE_WA=0.065
DEFAULT_TAX_RATE=0.05

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=50
STANDARD_SHIPPING_COST=8.99

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://icepaca.com

# Shipping Configuration
SHIPPO_API_KEY=shippo_test_your_api_key_here
EASYPOST_API_KEY=EZTK_your_easypost_key_here
WAREHOUSE_ADDRESS1=123 Cool Street
WAREHOUSE_ADDRESS2=Suite 100
WAREHOUSE_CITY=San Francisco
WAREHOUSE_STATE=CA
WAREHOUSE_ZIP=94102
WAREHOUSE_PHONE=+1 555 123 4567
WAREHOUSE_EMAIL=shipping@icepaca.com

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Carbon Offset API (for enhanced sustainability features)
CARBON_API_KEY=your_carbon_api_key_here
CARBON_OFFSET_RATE_PER_KG=0.02